<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="School.Client.Views.ClassesWindow"
		xmlns:vm="using:School.Client.ViewModels"
        Title="Редактирование класса"
		MaxWidth="500"
	    SizeToContent="Height">
	
	<Design.DataContext>
		<vm:ClassViewModel/>
	</Design.DataContext>

	<Window.Styles>
		<StyleInclude Source="/SchoolStyles.axaml"/>
	</Window.Styles>

	<Grid Classes="MainGrid" RowDefinitions="Auto,*" ColumnDefinitions="Auto,*">
		
		<Label VerticalAlignment="Center">Школа </Label>
		<TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Number}" />
		<StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
			HorizontalAlignment="Right"
		    Orientation="Horizontal"> 
			<Button Command="{Binding OnSubmitCommand}">OK</Button>
			<Button Click="CancelButtonOn_Click">Отмена </Button>
		</StackPanel>
	</Grid>

</Window>
